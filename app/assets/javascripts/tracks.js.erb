$(document).ready(function () {
	$('#play-button').click(function() {
		soundManager.play('mySound');
		$(this).toggle();
		$('#stop-button').toggle();
	});

	$('#stop-button').click(function() {
		soundManager.stop('mySound');
		$(this).toggle();
		$('#play-button').toggle();
	});
});

